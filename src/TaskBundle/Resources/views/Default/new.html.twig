{% extends 'base.html.twig' %}

{% block body %}
	<h1>
		{% if edit is defined %}
		Editar Tarea
		{% else %}
		Nueva Tarea
		{% endif %}		
	</h1>
	<p></p>
	<ul>
	
	{{ form_start(form,{'attr':{'class': ''}}) }}
		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_label(form.name, 'Tarea') }} {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
		</div>

			<div class="form-group">{{ form_label(form.name, 'Fecha Fin') }} {{ form_widget(form.duedate,{'attr':{'class':'form-control'}}) }}</div>
			<div class="form-group">{{ form_label(form.name, 'Importante') }} {{ form_widget(form.important,{'attr':{'class':'form-control'}}) }}</div>
			<div class="form-group">{{ form_label(form.name, 'Categor√≠a') }} {{ form_widget(form.taskcategory,{'attr':{'class':'form-control'}}) }}</div>
			
			<div class="form-group">{{ form_widget(form.save,{'attr':{'class': 'btn btn-primary form-control'}}) }}</div>
		</div>
	{{ form_end(form) }}
	</ul>

{% endblock %}

